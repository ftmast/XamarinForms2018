<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplicativo01_LayoutXF.Layouts.Absolute.AbsolutePage">
    <ContentPage.Content>
        <AbsoluteLayout>
            <BoxView BackgroundColor="Blue" AbsoluteLayout.LayoutBounds="0,0,200,100"/>
            <BoxView BackgroundColor="Green" AbsoluteLayout.LayoutBounds="50, 50, 100, 100"/>
            <BoxView BackgroundColor="Red" AbsoluteLayout.LayoutBounds="150, 150, 50, 50"/>

            <BoxView BackgroundColor="Yellow" AbsoluteLayout.LayoutBounds="0, 400, 0.8, 100" AbsoluteLayout.LayoutFlags="WidthProportional"/>
            <BoxView BackgroundColor="GreenYellow" AbsoluteLayout.LayoutBounds="300, 300, 0.5, 0.5" AbsoluteLayout.LayoutFlags="SizeProportional"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>